# --- launch programs ---

# terminal
super + shift + Return
	$TERMINAL
# browser
super + shift + w
    $BROWSER
# program launcher
super + space
	dmenu_run
# passmenu
super + p
    passmenu
# clipmenu
super + Insert
    clipmenu

# --- dwm ---

# toggle bar
super + b
    dwmc togglebar
# focus stack
super + {j,k}
    dwmc focusstack {+,-}1
# rotate stack
super + shift + {j,k}
    dwmc {pushdown, pushup}
# increase, decrease nmaster
super + {i,d}
    dwmc incnmaster {+,-}1
# set mfact
super + {h,l}
    dwmc setmfact {-,+}0.05
# view
super + Tab
    dwmc view
# transfer client to master or stack
super + x 
    dwmc transfer
# zoom
super + Return
    dwmc zoom
# toggle floating
super + grave
    dwmc togglefloating
# toggle fullscreen
super + shift + f
    dwmc togglefullscr
# kill client
super + shift + c
    dwmc killclient
# set layout
super + {t,f,m,o}
    dwmc setlayoutex {0,1,2,3}
# view all tags
super + 0
    dwmc viewall
# tag all
super + shift + 0
    dwmc tagall
# view tag; move client to diffrent tag
super + {_,ctrl +}{_,shift +} {1-9}
	dwmc {_,toggle}{viewex,tagex} {0-8}
# change monitor; move client there
super + {comma, period}
   dwmc focusmon {-,+}1 
# move client to the other monitor
super + shift + {comma, period}
   dwmc tagmon {-,+}1 
# change gaps
super + ctrl + {j,k}
    dwmc setgaps {+,-}1
# reset gaps
super + Home
    dwmc setgaps 0
# update colorscheme
super + F5
    dwmc xrdb
# restart dwm
super + shift + q
    dwmc quit
# quit dwm
super + shift + BackSpace
    pkill xinit

# --- misc ---
super + Escape
	pkill -USR1 -x sxhkd
# lockscreen
super + shift + x
    slock
# screenshot
Print
    sshot
# change volume
super + {equal,minus}
    amixer -q set Master {5%+,5%-}
# mute volume
super + shift + equal
    amixer -q set Master toggle
# change volume
{XF86AudioRaiseVolume,XF86AudioLowerVolume}
    amixer -q set Master 5%{+,-}
# mute volume
XF86AudioMute
    amixer -q set Master toggle
